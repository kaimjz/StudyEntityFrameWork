@model User
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>添加用户</title>
</head>
<body>
    <h3>添加用户</h3>
    <form action="Add" method="post" class="form-horizontal">
        <div class="row">
            <a asp-action="Index">回到用户列表</a>
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-1 control-label">用户名: </label>
            <div class="col-sm-10">
                <input type="text" id="name" asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="age" class="col-sm-1 control-label">年龄:   </label>
            <div class="col-sm-10">
                <input type="text" id="age" asp-for="Age" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
                <input type="submit" value="提交" class="btn btn-default" />
            </div>
        </div>
    </form>
</body>
</html>
